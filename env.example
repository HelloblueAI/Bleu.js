# =============================================================================
# Bleu.js Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Bleu.js
APP_VERSION=1.1.8
DEBUG=false
TESTING=false
ENV_NAME=production
LOG_LEVEL=INFO
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_PORT=3000
PORT=8000
HOST=0.0.0.0

# =============================================================================
# SECURITY SETTINGS (CRITICAL - MUST BE SET)
# =============================================================================
# Generate strong secrets: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-at-least-32-characters-long
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters-long

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Features
ENABLE_SECURITY=true
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL (Recommended for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bleujs_prod
DB_USER=bleujs_user
DB_PASSWORD=your-strong-database-password

# Or use DATABASE_URL for direct connection string
# DATABASE_URL=postgresql://user:password@host:port/database

# Connection Pooling
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
# REDIS_URL=redis://:password@host:port/db

# =============================================================================
# CORS & SECURITY HEADERS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://api.your-domain.com

# Allowed hosts for TrustedHostMiddleware
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CORE=100
RATE_LIMIT_ENTERPRISE=1000
RATE_LIMIT_PERIOD=3600

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@your-domain.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry (if using for error tracking)
SENTRY_DSN=your-sentry-dsn

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# QUANTUM COMPUTING SETTINGS
# =============================================================================
# IBM Quantum (if using)
IBM_QUANTUM_TOKEN=your-ibm-quantum-token
IBM_QUANTUM_BACKEND=ibmq_qasm_simulator

# AWS Braket (if using)
AWS_BRAKET_BUCKET=your-braket-bucket
AWS_BRAKET_REGION=us-east-1

# =============================================================================
# MACHINE LEARNING SETTINGS
# =============================================================================
# GPU Settings
USE_GPU=true
GPU_MEMORY_FRACTION=0.8
CUDA_VISIBLE_DEVICES=0

# Model Settings
MODEL_CACHE_DIR=/tmp/models
BATCH_SIZE=1024
NUM_WORKERS=4

# =============================================================================
# TESTING ENVIRONMENT
# =============================================================================
# Only set these for testing
TESTING=false
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=bleujs_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_RATE_LIMIT=1000
TEST_RATE_LIMIT_WINDOW=3600

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment and modify for development
# DEBUG=true
# APP_ENV=development
# APP_DEBUG=true
# LOG_LEVEL=DEBUG
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# ALLOWED_HOSTS=localhost,127.0.0.1,::1
