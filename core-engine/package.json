{
  "name": "core-engine",
  "version": "1.1.2",
  "type": "module",
  "main": "src/index.mjs",
  "scripts": {
    "start": "node src/index.mjs",
    "dev": "nodemon --watch src --ext mjs --exec node src/index.mjs",
    "lint": "eslint . --ext .js,.mjs",
    "format": "prettier --write .",
    "test": "jest --coverage --passWithNoTests",
    "build": "tsc",
    "security:audit": "pnpm audit && snyk test",
    "security:monitor": "snyk monitor",
    "security:fix": "snyk wizard",
    "security:scan": "snyk code test && snyk container test",
    "security:lint": "eslint . --ext .js,.mjs --plugin security",
    "security:test": "jest --coverage --passWithNoTests --testMatch='**/__tests__/**/*.security.test.js'",
    "security:deps": "pnpm audit && snyk test && snyk-delta",
    "security:container": "trivy image your-image-name:latest",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "cluster": "^0.7.7",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.5.0",
    "morgan": "^1.10.0",
    "mime": "^3.0.0",
    "redis": "^4.7.0",
    "send": "^0.19.0",
    "serve-static": "^1.16.0",
    "uuid": "^11.0.5",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "helmet-csp": "^2.1.0",
    "hpp": "^0.2.3",
    "xss": "^1.0.14",
    "csrf": "^3.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-basic-auth": "^1.2.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "typescript": "~5.7.3",
    "snyk": "^1.1296.0",
    "snyk-delta": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "security": {
    "audit": true,
    "monitor": true,
    "scan": true,
    "lint": true
  }
}
