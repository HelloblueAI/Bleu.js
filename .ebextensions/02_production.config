option_settings:
  aws:elasticbeanstalk:application:environment:
    # Application Settings
    DJANGO_SETTINGS_MODULE: "bleujs.settings"
    ALLOWED_HOSTS: ".elasticbeanstalk.com"
    DEBUG: "False"
    
    # Security Settings
    SECURE_SSL_REDIRECT: "True"
    SESSION_COOKIE_SECURE: "True"
    CSRF_COOKIE_SECURE: "True"
    SECURE_BROWSER_XSS_FILTER: "True"
    SECURE_CONTENT_TYPE_NOSNIFF: "True"
    X_FRAME_OPTIONS: "DENY"
    
    # Performance Settings
    DJANGO_CACHE_BACKEND: "django.core.cache.backends.redis.RedisCache"
    DJANGO_CACHE_LOCATION: "redis://localhost:6379/1"
    
    # Payment Gateway Settings
    STRIPE_PUBLIC_KEY: "${STRIPE_PUBLIC_KEY}"
    STRIPE_SECRET_KEY: "${STRIPE_SECRET_KEY}"
    STRIPE_WEBHOOK_SECRET: "${STRIPE_WEBHOOK_SECRET}"
    
    # Email Settings
    EMAIL_HOST: "smtp.amazonaws.com"
    EMAIL_PORT: "587"
    EMAIL_HOST_USER: "${AWS_SES_USER}"
    EMAIL_HOST_PASSWORD: "${AWS_SES_PASSWORD}"
    EMAIL_USE_TLS: "True"
    DEFAULT_FROM_EMAIL: "noreply@bleujs.com"

  # Auto Scaling Settings
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.small
    SecurityGroups: ${SECURITY_GROUP_ID}
    IamInstanceProfile: ${APP_NAME}-ec2-role

  aws:autoscaling:asg:
    MinSize: 2
    MaxSize: 10
    Cooldown: 300
    CustomAvailabilityZones: ${REGION}a,${REGION}b

  aws:autoscaling:trigger:
    BreachDuration: 5
    LowerThreshold: 20
    UpperThreshold: 80
    MeasureName: CPUUtilization
    Unit: Percent
    ScaleIncrement: 1

  # Load Balancer Settings
  aws:elb:loadbalancer:
    CrossZone: true
    ConnectionSettingIdleTimeout: 60
    ConnectionIdleTimeout: 60
    IdleTimeout: 60

  # CloudWatch Settings
  aws:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 30

  # Health Check Settings
  aws:elasticbeanstalk:command:
    Timeout: 1800
    IgnoreHealthCheck: false

  # Database Settings
  aws:rds:dbinstance:
    DBInstanceClass: db.t3.small
    MultiAZ: true
    AllocatedStorage: 20
    BackupRetentionPeriod: 7
    DeletionPolicy: Snapshot
    Engine: postgres
    EngineVersion: 14.7
    PubliclyAccessible: false
    StorageEncrypted: true
    StorageType: gp3

  # S3 Settings
  aws:s3:bucket:
    Versioning: true
    LifecycleConfiguration:
      Rules:
        - Id: DeleteOldVersions
          Status: Enabled
          ExpirationInDays: 90
        - Id: DeleteOldLogs
          Status: Enabled
          ExpirationInDays: 30

  # CDN Settings
  aws:cloudfront:distribution:
    Enabled: true
    DefaultTTL: 86400
    MaxTTL: 31536000
    MinTTL: 0
    PriceClass: PriceClass_100
    ForwardQueryString: false
    ForwardCookies: none
    Compress: true
    DefaultRootObject: index.html
    CustomErrorResponses:
      - ErrorCode: 404
        ResponsePagePath: /index.html
        ResponseCode: 200
      - ErrorCode: 403
        ResponsePagePath: /index.html
        ResponseCode: 200 