{
  "name": "eggs-generator",
  "version": "1.1.2",
  "description": "AI-powered microservice for generating eggs with intelligent decision-making.",
  "type": "module",
  "main": "src/index.mjs",
  "scripts": {
    "start": "node src/index.mjs",
    "dev": "nodemon --inspect --experimental-worker src/index.mjs",
    "build": "babel src --out-dir dist --extensions \".ts,.js\"",
    "test": "NODE_ENV=test jest --config jest.config.cjs --runInBand",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:ci": "jest --ci --coverage --config jest.config.cjs",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "lint": "eslint . --fix",
    "lint:check": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "clean": "rimraf dist logs coverage",
    "debug": "node --inspect-brk src/index.mjs",
    "docker:build": "docker build -t bleujs-eggs .",
    "docker:run": "docker run -d -p 3003:3003 --name eggs-api bleujs-eggs",
    "k8s:deploy": "kubectl apply -f k8s/eggs-deployment.yaml",
    "prepare": "husky install",
    "pretest": "npm run clean",
    "postbuild": "npm run test:ci"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "detect-port": "^2.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "mongoose": "^8.10.1",
    "morgan": "^1.10.0",
    "pino": "^9.6.0",
    "rate-limiter-flexible": "^5.0.5",
    "redis": "^4.7.0",
    "uuid": "^11.0.5",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.26.0",
    "@babel/runtime-corejs3": "^7.26.9",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-summary-reporter": "^0.0.2",
    "mongodb-memory-server-core": "^10.1.4",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "plugins": [
      "import",
      "node",
      "security"
    ],
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "security/detect-object-injection": "warn",
      "import/no-unresolved": "error",
      "node/no-unsupported-features/es-syntax": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0"
  }
}
