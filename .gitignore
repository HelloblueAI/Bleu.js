# ----------------------------------------
# 🔥 Language Detection Control (Show Python Dominance)
# ----------------------------------------
# Hide other languages from GitHub statistics
*.js linguist-vendored=true
*.jsx linguist-vendored=true
*.ts linguist-vendored=true
*.tsx linguist-vendored=true
*.mjs linguist-vendored=true
*.cjs linguist-vendored=true
*.json linguist-vendored=true
*.css linguist-vendored=true
*.scss linguist-vendored=true
*.less linguist-vendored=true
*.html linguist-vendored=true
*.xml linguist-vendored=true
*.md linguist-vendored=true
*.yaml linguist-vendored=true
*.yml linguist-vendored=true
*.lock linguist-vendored=true
*.vue linguist-vendored=true
*.sql linguist-vendored=true
*.prisma linguist-vendored=true
*.graphql linguist-vendored=true

# Make Python prominent
*.py linguist-detectable=true
*.pyx linguist-detectable=true
*.pyi linguist-detectable=true
requirements.txt linguist-detectable=true
pyproject.toml linguist-detectable=true

# Vendor directories
node_modules/** linguist-vendored
dist/** linguist-vendored
build/** linguist-vendored
vendor/** linguist-vendored
dependency-management/** linguist-vendored

