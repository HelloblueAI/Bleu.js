{
  "name": "bleujs-frontend",
  "version": "1.1.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "webpack serve --config webpack.config.cjs --mode development",
    "build": "webpack --config webpack.config.cjs --mode production",
    "lint": "eslint 'src/**/*.{js,vue}' --cache",
    "lint:fix": "eslint 'src/**/*.{js,vue}' --cache --fix",
    "test": "jest",
    "prettier:fix": "prettier --write 'src/**/*.vue' 'src/**/*.js'",
    "security:audit": "pnpm audit && snyk test",
    "security:monitor": "snyk monitor",
    "security:deps": "pnpm audit && snyk test && snyk-delta",
    "security:lint": "eslint 'src/**/*.{js,vue}' --plugin security"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "yargs": "^17.7.2",
    "xss": "^1.0.14",
    "sanitize-html": "^2.12.1",
    "dompurify": "^3.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "babel-jest": "^26.6.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "esbuild-loader": "^4.2.2",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2",
    "snyk": "^1.1296.0",
    "snyk-delta": "^1.5.0",
    "eslint-plugin-security": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
