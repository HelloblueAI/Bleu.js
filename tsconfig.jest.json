{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
