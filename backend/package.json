{
  "name": "bleu-backend",
  "version": "1.0.0",
  "description": "Backend for Bleu.js with powerful testing setup",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:backend": "jest --config jest.backend.config.js",
    "lint": "eslint .",
    "pretest": "echo 'Running pretest tasks...'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "babel-jest": "^29.7.0",
    "nodemon": "^2.0.15",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
