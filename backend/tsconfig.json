{
  "compilerOptions": {
    // ðŸš€ Modern JS/TS Features
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    // ðŸš€ Optimized Interop & Compatibility
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    // ðŸš€ Build Performance
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "tsBuildInfoFile": "./tsbuildinfo.json",
    "skipLibCheck": true,
    // ðŸš€ Type Safety & Strict Mode
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": false, // Prevents unnecessary strictness
    "noUncheckedIndexedAccess": true,
    // ðŸš€ Debugging & Code Quality
    "sourceMap": true,
    "noUnusedLocals": false, // Allow flexibility in development
    "noUnusedParameters": false, // Avoid breaking function signatures
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    // ðŸš€ Path Aliases
    "paths": {
      "@backend/*": [
        "./src/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    },
    // ðŸš€ Type Definitions
    "types": [
      "node",
      "express",
      "vitest",
      "jest",
      "cors",
      "multer",
      "morgan",
      "natural"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
