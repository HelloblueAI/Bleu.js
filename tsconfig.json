{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest", "node", "express"]
  },
  "include": [
    "backend/**/*.ts",
    "frontend/**/*.ts",
    "test/setup.ts",
    "src/**/*",
    "test/**/*",
    "core-engine/src/core/circuit-breaker.mjs",
    "core-engine/src/core/service-generator.mjs"
  ]
}
