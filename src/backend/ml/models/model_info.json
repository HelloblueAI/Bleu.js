{
  "model_name": "advanced_logistic_regression",
  "max_iter": 1000,
  "cv_splits": 3,
  "regularization": {
    "penalty": "l2",
    "C": 1.0,
    "solver": "lbfgs",
    "class_weight": "balanced"
  },
  "scaling": {
    "method": "StandardScaler"
  },
  "optimization": {
    "cross_validation": true,
    "cv_splits": 3,
    "random_state": 42,
    "scoring_metric": "accuracy",
    "early_stopping": {
      "enabled": true,
      "tolerance": 0.0001,
      "validation_split": 0.2
    }
  },
  "output": {
    "model_path": "models/advanced_logistic_regression.pkl",
    "log_path": "logs/training_log.txt"
  }
}
